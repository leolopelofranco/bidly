              th
                | Date
              th
                | Name
              th
                | Number of Bidders
              th
                | Your Bids
              th
                | Total Cost
              th
                | Expiry
              th
                | Status
            tr ng-repeat="t in tables"
              td
                | {{t.date}}
              td
                | {{t.name}}
              td
                | {{t.bidders}}
              td
                | {{t.bids}}
              td
                | {{t.total}}
              td
                | {{t.expiry}}
              td
                | {{t.status}}
        table.row-space-top-7 ng-switch-when="transaction" 
          tr
            th
              | Purchase Date
            th
              | # of Coins
            th
              | Cost per Coin
            th
              | Total Cost
            th
              | Payment Method
          tr ng-repeat="t in history"
            td
              | {{t.date}}
            td
              | {{t.coins}}
            td
              | {{t.cost}}
            td
              | {{t.total}}
            td
              | {{t.method}}
